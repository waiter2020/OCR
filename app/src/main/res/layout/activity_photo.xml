<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimaryDark"
        tools:context=".photo.PhotoActivity">
    <android.support.v7.widget.Toolbar
            android:id="@+id/head"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/a001"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toTopOf="@+id/photo"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"/>

    <pub.upc.ocr.photo.PinchImageView
            android:layout_width="0dp"
            android:layout_height="0dp" app:srcCompat="@mipmap/ic_launcher"
            android:id="@+id/photo"
            app:layout_constraintTop_toBottomOf="@+id/head"
            android:layout_marginBottom="11dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="1dp"
            android:layout_marginEnd="1dp"
            android:contentDescription="TODO"/>
</android.support.constraint.ConstraintLayout>